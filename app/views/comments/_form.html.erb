  <%= form_with model:[ @article, @article.comments.build ], class: "form-horizontal", id:"comments-body", role: "form" do |f| %>
 <div class="form-group">
   <div class="col-sm-6">
    <%= f.text_field :commenter, class: "form-control", placeholder: "Name", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="col-sm-6">
    <%= f.text_area :body, rows: 10, class: "form-control", placeholder: "Enter Comment" %>
   </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: 'btn btn-primary btn-large' %>
   </div>
  </div>
<% end %>
 </div>
</div>